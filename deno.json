{
	"workspace": [
		"front",
		"back"
	],

	"tasks": {
		"fclean": "deno task -f @theTypist/front clean",
		"fwatch": "deno task -f @theTypist/front watch",
		"fserver": "deno task -f @theTypist/front server",
		"fcompile": "deno task -f @theTypist/front compile",

		"bclean": "deno task -f @theTypist/back clean",
		"bdebug": "deno task -f @theTypist/back debug",
		"bcompile": "deno task -f @theTypist/back compile",

		"clean": "/bin/rm -vr ./out || exit 0",
		"compile": "deno task fcompile && deno task bcompile",
		"deploy": "bash bin/deploy.sh front"
	},

	"vendor": true,
	"imports": {
		"css-loader": "npm:css-loader@^7.1.2",
		"css-minimizer-webpack-plugin": "npm:css-minimizer-webpack-plugin@^7.0.4",
		"html-loader": "npm:html-loader@^5.1.0",
		"html-webpack-plugin": "npm:html-webpack-plugin@^5.6.5",
		"mini-css-extract-plugin": "npm:mini-css-extract-plugin@^2.9.4",
		"style-loader": "npm:style-loader@^4.0.0",
		"ts-loader": "npm:ts-loader@^9.5.4",
		"webpack": "npm:webpack@^5.104.1",
		"webpack-cli": "npm:webpack-cli@^6.0.1"
	}
}
